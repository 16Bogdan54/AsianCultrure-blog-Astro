---
import { Button, Card } from "flowbite-react";
import Icon from "astro-icon";
interface Props {
  url: string;
  title: string;
  date: string;
}

const { url, title, date } = Astro.props;
---

<div
  class="max-w-sm p-4 bg-white border border-gray-200 rounded-lg shadow dark:bg-gray-800 dark:border-gray-700 flex flex-col gap-2"
>
  <h5 class="text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
    {title}
  </h5>
  <p class="font-normal text-gray-700 dark:text-gray-400">{date}</p>
  <a
    class="w-1/2 flex justify-center items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
    href={url}
    client:load
  >
    <span class="mr-3">Read more</span>
    <Icon name="arrow_right" class="w-6 h-6" />
  </a>
</div>
