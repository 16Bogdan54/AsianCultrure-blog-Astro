---
import BaseLayout from "../layouts/BaseLayout.astro";
import Posts from "../components/posts/Posts";

import { getCollection } from "astro:content";

let blogPosts;

try {
  blogPosts = await getCollection("posts", (post) =>
    post.data.category?.match("cooking")
  );
  console.log(blogPosts[0].data);
} catch (err) {
  alert(err);
}
---

<BaseLayout title="Cooking">
  <Posts client:load title="Cooking" searchList={blogPosts} />
</BaseLayout>
