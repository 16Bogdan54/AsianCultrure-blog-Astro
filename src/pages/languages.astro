---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/blogpost/BlogPost.astro";
import TopPanel from "../components/topPanel/TopPanel";

import { getCollection } from "astro:content";
import { getUniqueTags } from "../utils/utils";

let blogPosts;

try {
  blogPosts = await getCollection("posts", (post) =>
    post.data.category?.match("languages")
  );
} catch (err) {
  alert(err);
}
---

<BaseLayout title="Languages">
  <TopPanel
    client:load
    title="Languages"
    tags={getUniqueTags(blogPosts)}
    searchList={blogPosts}
  />
</BaseLayout>
